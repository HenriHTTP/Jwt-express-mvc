<div class="m-auto flex p-10 w-full justify-center flex-col bg-neutral-100">
  <div
    class="m-auto w-4/5 p-10 rounded-lg flex justify-center flex-col border-solid border-2 bg-white border-neutral-600"
  >
    <form action="/create/post" method="get" class="m-auto text-xl">
      <h1 class="text-xl text-center">New Post</h1>
      <input
        type="submit"
        value="create"
        class="p-3 bg-gray-900 text-white w-40 m-auto rounded-md text-base"
      />
    </form>
    <div class="m-auto text-xl">
      <ul>
        <% dashboardPosts.forEach((data) => { %>
        <div class="m-auto p-5 flex flex-col">
          <h1 class="text-center">"<%= data.title %>"</h1>
          <div class="m-auto flex p-2 w-full justify-around">
            <form action="/remove" method="POST" class="m-auto">
              <input type="hidden" name="id" value="<%= data.id %>" />
              <input
                type="submit"
                value="Delete"
                class="p-2 bg-gray-900 text-white w-20 m-auto rounded-md text-base"
              />
            </form>
          </div>
        </div>

        <% }); %> <% if(!dashboardPosts.length) {%>
        <h1>dont have posts</h1>
        <% } %>
      </ul>
    </div>
  </div>
</div>
