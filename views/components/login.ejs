<div class="h-screen flex justify-center flex-col bg-neutral-100">
  <form
    action="/login"
    method="post"
    class="m-auto w-96 h-96 bg-white p-5 rounded-xl flex flex-col border-solid border-2 border-neutral-600 text-gray-500 text-center"
  >
    <h1 class="text-3xl p-5">
      <i class="fa-solid fa-address-card"></i>
      Login
    </h1>
    <p>
      <i class="fa-solid fa-envelope"></i>
      E-mail
    </p>
    <input
      type="email"
      name="email"
      id=""
      class="m-auto p-3 w-3/4 text-neutral-600 resize-none border-solid border-2 border-neutral-600 rounded-md focus:outline-none"
    />
    <p>
      <i class="fa-solid fa-key"></i>
      Password
    </p>
    <input
      type="password"
      name="password"
      id=""
      class="m-auto p-3 w-3/4 text-neutral-600 resize-none border-solid border-2 border-neutral-600 rounded-md focus:outline-none"
    />
    <input
      type="submit"
      value="Enter"
      class="p-3 bg-gray-900 text-white w-3/4 m-auto rounded-md text-base mt-6"
    />
    <p>
      <a href="/register" class="border-b border-gray-900">
        are you don't have account? click at here
      </a>
    </p>
  </form>
</div>
